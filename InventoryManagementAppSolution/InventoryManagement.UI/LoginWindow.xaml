<Window x:Class="InventoryManagement.UI.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InventoryManagement.UI"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    <Grid>
        <TextBox Name="UsernameTextBox" Margin="10,30,10,0" VerticalAlignment="Top"/>
        <PasswordBox Name="PasswordBox" Margin="10,80,10,0" VerticalAlignment="Top"/>
        <Button Content="Login" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10" Click="LoginButton_Click"/>
    </Grid>
</Window>
